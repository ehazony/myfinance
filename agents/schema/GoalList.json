{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "GoalList",
    "type": "object",
    "required": ["goals"],
    "properties": {
      "goals": {
        "type":"array",
        "items": { "$ref":"Goal" }
      },
      "missing_info":{
        "type":"array",
        "items":{"type":"string"}
      }
    },
  
    "definitions":{
      "Goal":{
        "type":"object",
        "required":["goal_id","name","target_amount","currency","target_date","priority","status"],
        "properties":{
          "goal_id":       {"type":"string","format":"uuid"},
          "name":          {"type":"string"},
          "description":   {"type":"string"},
          "target_amount": {"type":"number"},
          "currency":      {"type":"string","pattern":"^[A-Z]{3}$"},
          "target_date":   {"type":"string","format":"date"},
          "priority":      {"type":"integer","minimum":1},
          "monthly_requirement":{"type":"number"},
          "funded_so_far": {"type":"number"},
          "status":        {"type":"string","enum":["active","achieved","paused","cancelled"]}
        }
      }
    }
  }
