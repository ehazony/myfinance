{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "ReminderTask",
    "type": "object",
    "required": ["task_id","description","schedule","status"],
    "properties": {
      "task_id":    {"type":"string","format":"uuid"},
      "description":{"type":"string"},
      "schedule":  {"type":"string","description":"RFC 5545 RRULE or ISO 8601 duration"},
      "next_run":  {"type":"string","format":"date-time"},
      "status":    {"type":"string","enum":["scheduled","completed","paused","cancelled"]},
      "related_object_id":{"type":"string"}
      ,"missing_info":{
        "type":"array",
        "items":{"type":"string"}
      }
    }
  }
